template Master_Button_Modify_Texture
{
	modify_texture = {
		texture = "gfx/interface/master_textures/master_button_base.dds"
		blend_mode = add
		framesize = { 96 96 }
		spritetype = corneredtiled

		block "master_color_frame" {}
	}
}

